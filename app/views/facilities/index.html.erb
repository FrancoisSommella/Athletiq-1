
<div class="content">

  <% @facilities.each do |facility| %>
      <div class="cards">

        <div class="card" style="background-image: url(http://kitt.lewagon.com/placeholder/cities/rio)">

          <% if facility.photo.attached? %>
            <%= cl_image_tag facility.photo.key, crop: :fill, class:"img-index"%>
          <%end%>
          <div class="card-body">
            <h5 class="card-title"><%= link_to facility.name, facility_path(facility), class:"h5-card" %></h5>
            <p class="card-text"><%= facility.description %></p>
            <p class="card-text"><%= facility.price %>â‚¬</p>
          </div>

        </div>
      </div>
  <% end %>




      <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
</div>
