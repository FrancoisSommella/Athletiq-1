<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>All Facilities</h1>
      <ul class="list-group">
        <% @facilities.each do |facility| %>

            <div class="card" style="width: 18rem;">
              <img src="https://images.unsplash.com/photo-1489944440615-453fc2b6a9a9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60" class="card-img-top" alt="...">
              <div class="card-body">
              <h5 class="card-title"><%= link_to facility.name, facility_path(facility.id) %></h5>
              <p class="card-text"><%= facility.description %></p>
              <%= link_to "Book now", facility_path(facility.id), class: "btn btn-primary" %>
              </div>
            </div>

        <% end %>
      </ul>
    </div>
  </div>
</div>
