
<div class="container-fluid content">
<div class="cards row mx-1">
  <% @facilities.each do |facility| %>
    
        <div class="card col-md-5 m-2 px-0">

          <% if facility.photo.attached? %>
            <%= cl_image_tag facility.photo.key, crop: :fill, class:"img-index"%>
          <%end%>
          <div class="card-body ">
            <h5 class="card-title"><%= link_to facility.name, facility_path(facility), class:"h5-card" %></h5>
            <p class="card-text"><%= facility.address %></p>
            <p class="card-text"><%= facility.price %>â‚¬</p>
          </div>

        </div>
      
  <% end %>

</div>


      <div class="col-md-7" id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
</div>
